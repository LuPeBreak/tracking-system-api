{
  "name": "api",
  "version": "1.0.0",
  "packageManager": "^pnpm@8.9.2",
  "scripts": {
    "build": "pnpm env:load prisma migrate && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "pnpm env:load node build/http/server.js",
    "dev": "pnpm env:load tsx watch src/http/server.ts",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio",
    "db:reset": "pnpm env:load prisma migrate reset",
    "db:seed": "pnpm env:load prisma db seed",
    "env:load": "dotenv --"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@prisma/client": "5.12.1",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.28.0",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "zod": "^3.23.8"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto",
    "bracketSameLine": false
  },
  "eslintConfig": {
    "extends": [
      "@rocketseat/eslint-config/node"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error"
    }
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.9",
    "dotenv-cli": "^7.4.2",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "prettier": "^3.3.2",
    "prisma": "5.12.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2",
    "typescript": "^5.5.2"
  }
}